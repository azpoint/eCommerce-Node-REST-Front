<%- include('../templates/head') %>

<body>
    <a href="/" class="button">Back to Home</a>

    <div class="centralForm">
        <h1>Login</h1>        
        <h2 style="color: red;"><%- message %></h2>
        <form action="/login" method="post" class="actualForm">
            <label for="logName">e-mail: </label>
            <input type="email" id="logName" name="name" required autofocus>
            <label for="logPass">Password: </label>
            <input type="password" id="logPass" name="password" required>
            <button type="submit">Get in!</button>
        </form>

        <h2 class="actualForm">Don't have an account? <a href="/signup">Sign up here!</a></h2>
    </div>
</body>
</html>
