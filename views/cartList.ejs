  <script>
      
      $('body').on('click', '.cartAddButton', (e) => {
          let idToRemove = e.currentTarget.childNodes[1].innerHTML;

          fetch(`/cart/products/${idToRemove}`, {
            method: 'delete',
            headers: { 'Content-Type' : 'application/json' },
            cache: 'no-cache'
            })
            location.reload();
        })
  </script>        
