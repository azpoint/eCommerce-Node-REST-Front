<%- include('../templates/head') %>

<body>
    <a href="/" class="button">Back to Home</a>

    <div class="centralForm">
        <h1>Sign up!</h1>
        <h2 style="color: red;"><%- message %></h2>
        <form action="/signup" method="POST" class="actualForm" enctype="multipart/form-data">
            <label for="logName">e-mail: </label>
            <input type="email" id="logName" name="username" required autofocus>
            <label for="logPass">Password: </label>
            <input type="password" id="logPass" name="password" required>
            <label for="alias">Alias: </label>
            <input type="text" id="alias" name="alias" required>
            <label for="phoneCode">Phone Code:</label>
            <%- include('../templates/countryCodes') %>            
            <label for="phoneNumber">Phone:</label>
            <input type="number" name="phoneNumber" id="phoneNumber" required>
            <label for="address">Address:</label>
            <input type="text" name="address" id="address" required>
            <label for="adminCheck">Is admin?</label>
            <input type="checkbox" id="adminCheck" name="isAdmin">
            <label for="upFile">Select Image:</label>
            <input type="file" name="avatar-image" id="upFile">
            <button type="submit">Sign me up!</button>
        </form>
    </div>
</body>
</html>